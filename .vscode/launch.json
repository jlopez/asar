    "version": "0.2.0",
    "configurations": [
        {
            "name": "Assemble SMW",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/asar/bin/asar",
            "args": [
                "-D_VER=1",
                "smw.asm",
                "smw.smc"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/../SMWDisX",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build",
            "internalConsoleOptions": "openOnSessionStart",
        }
    ]
}